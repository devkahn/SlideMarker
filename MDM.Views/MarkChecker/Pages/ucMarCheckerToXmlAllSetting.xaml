<UserControl x:Class="MDM.Views.MarkChecker.Pages.ucMarCheckerToXmlAllSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDM.Views.MarkChecker.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="LightGray">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/resMDMColors.xaml"/>
                <ResourceDictionary Source="../../Resources/Styles/resMDMStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{StaticResource color_White}">
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <StackPanel.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="Orientation" Value="Vertical"/>
                        <Setter Property="Margin" Value="0,0,0,10"/>
                    </Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{StaticResource color_DarkBlue}"/>
                        <Setter Property="Height" Value="30"/>
                    </Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Foreground" Value="{StaticResource color_White}"/>
                        <Setter Property="FontWeight" Value="Black"/>
                    </Style>
                    <Style TargetType="RadioButton">
                        <EventSetter Event="Checked" Handler="RadioButton_Checked"/>
                        <Setter Property="GroupName" Value="xmlSetting"/>
                        <Setter Property="Height" Value="35"/>
                        <Setter Property="Background" Value="{StaticResource color_White}"/>
                        <Setter Property="Foreground" Value="{StaticResource color_Gray5}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border Height="{TemplateBinding Height}" Background="{TemplateBinding Background}">
                                        <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,5,0"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource color_Gray2}"/>
                                <Setter Property="Foreground" Value="{StaticResource color_Black}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{StaticResource color_Primary}"/>
                                <Setter Property="Foreground" Value="{StaticResource color_Yellow}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>
                <StackPanel>
                    <Border>
                        <TextBlock Text="문서 설정"/>
                    </Border>
                    <RadioButton Uid="210" Content="BOOK 속성"/>
                </StackPanel>
                <StackPanel>
                    <Border>
                        <TextBlock Text="제목 설정"/>
                    </Border>
                    <RadioButton Uid="211" Content="CHAPTER 속성 설정"/>
                    <RadioButton Uid="212" Content="Heading1 속성 설정"/>
                    <RadioButton Uid="213" Content="Heading2 속성 설정"/>
                    <RadioButton Uid="214" Content="Heading3 속성 설정"/>
                    <RadioButton Uid="215" Content="Heading4 속성 설정"/>
                    <RadioButton Uid="216" Content="Heading5 속성 설정"/>
                </StackPanel>
                <StackPanel>
                    <Border>
                        <TextBlock Text="본문 설정"/>
                    </Border>
                    <RadioButton Uid="221" Content="글 속성 설정"/>
                    <RadioButton Uid="222" Content="그림 속성 설정"/>
                    <RadioButton Uid="223" Content="표 속성 설정"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <ContentPresenter Grid.Column="1" x:Name="contentpresenter"/>
    </Grid>
</UserControl>
