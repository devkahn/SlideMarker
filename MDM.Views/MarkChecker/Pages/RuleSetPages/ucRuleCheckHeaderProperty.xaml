<UserControl x:Class="MDM.Views.MarkChecker.Pages.RuleSetPages.ucRuleCheckHeaderProperty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDM.Views.MarkChecker.Pages.RuleSetPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" DataContextChanged="UserControl_DataContextChanged">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Resources/Styles/resMDMColors.xaml"/>
                <ResourceDictionary Source="../../../Resources/Styles/resMDMStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource color_Primary5}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Grid.Column="0" Text="[제목] 개별 수정" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="10,5,5,5"/>
                </StackPanel>

            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height=" 35"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource color_Primary2}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Grid.Column="0" Text="제목 리스트" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="10,0,10,0" HorizontalAlignment="Left"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <StackPanel.Resources>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource baseStyle_PanelTitle_Textblock}"/>
                                </StackPanel.Resources>
                                <TextBlock Text="("/>
                                <TextBlock Text="{Binding Items.Count, ElementName=listbox_headers}" Margin="3,0,3,0"/>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedItems.Count, ElementName=listbox_headers}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <TextBlock Text=" ," />
                                    <TextBlock Text="선택 : " Margin="3,0,3,0" Foreground="{StaticResource color_Yellow}"/>
                                    <TextBlock Text="{Binding SelectedItems.Count, ElementName=listbox_headers}" Foreground="{StaticResource color_Yellow}"/>
                                </StackPanel>
                                <TextBlock Text=")"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

              
                    <Grid Grid.Row="0">
                        <Grid.Resources>
                            <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}"/>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition MinHeight="35"/>
                            <RowDefinition MinHeight="35"/>
                            <RowDefinition MinHeight="35"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" BorderBrush="{StaticResource color_Gray2}" BorderThickness="0,0,0,2" Margin="3,2,3,2">
                            <Grid Grid.Row="0" Margin="5">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Uid="showAll" Content="전체 보기" Click="btn_Search_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Border Grid.Row="1" BorderBrush="{StaticResource color_Gray2}" BorderThickness="0,0,0,2" Margin="3,2,3,2">
                            <Grid Grid.Row="1" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock  Text="Level : " VerticalAlignment="Center" FontWeight="Bold"/>
                                    <TextBox x:Name="txtbox_LevelValue" Text="1" Width="50" Margin="5,0,5,0">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    <Button Uid="byLevel" Content="검색" Click="btn_Search_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Border Grid.Row="2" BorderBrush="{StaticResource color_Gray2}" BorderThickness="0,0,0,2" Margin="3,2,3,2">
                            <Grid Grid.Row="2" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="검색어 :" FontWeight="Bold" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" x:Name="txtbox_SearchKeyword" Margin="5,0,5,0">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <Button Grid.Column="2" Uid="byKeyword" Content="검색" Click="btn_Search_Click"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <ListBox Grid.Row="1" x:Name="listbox_headers" >
                        <ListBox.Style>
                            <Style TargetType="ListBox">
                                <Setter Property="SelectionMode" Value="Multiple"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </ListBox.Style>
                        <ListBox.Resources>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Height" Value="35"/>
                                <Setter Property="Margin" Value="0,0,0,1"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="35"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0" Grid.ColumnSpan="10" x:Name="bg" Opacity="0.2"/>
                                                <CheckBox Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{TemplateBinding IsSelected}"/>
                                                <Border Grid.Column="0" Background="{StaticResource color_White}" Opacity="0.001"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Display_Name}"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,10,0"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="SkyBlue"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                
                            </Style>
                        </ListBox.Resources>
           
                    </ListBox>
                    <Grid Grid.Row="2" Height="35">
                        <Grid.Resources>
                            <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                                <Setter Property="Margin" Value="3,5,3,5"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button Uid="1" Content="전체 선택" Click="btn_AllSelect_Click"/>
                            <Button Uid="0" Content="전체 해제" Click="btn_AllSelect_Click" />
                        </StackPanel>
                    </Grid>
                </Grid>
               


            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height=" 35"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource color_Primary5}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,10,0">
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource baseStyle_PanelTitle_Textblock}">
                                    
                                </Style>
                            </StackPanel.Resources>
                            <TextBlock Text="["/>
                            <TextBlock Text="{Binding SelectedItem.Display_Name, ElementName=listbox_headers}" Margin="3,0,3,0" Foreground="{StaticResource color_Yellow}" MaxWidth="150" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="]"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,3,3,0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedItems.Count, ElementName=listbox_headers}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <StackPanel.Resources>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource baseStyle_PanelTitle_Textblock}">
                                        <Setter Property="FontSize" Value="13"/>
                                    </Style>
                                </StackPanel.Resources>
                                <TextBlock Text=" 등"/>
                                <TextBlock Text="{Binding SelectedItems.Count, ElementName=listbox_headers}" Margin="3,0,3,0" Foreground="{StaticResource color_Yellow}"/>
                                <TextBlock Text="개 항목"/>
                            </StackPanel>
                            
                            <TextBlock Grid.Column="0" Text="수정하기" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="5"/>
                        </StackPanel>

                    </Grid>
                </Border>
                <Grid Grid.Row="1" >
                    <Grid.Resources>
                        <Style x:Key="subStyle_Title_Textlbock" TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="VerticalAlignment" Value="top"/>
                            <Setter Property="Margin" Value="10"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                        <Style TargetType="TextBox">
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Margin" Value="5"/>
                            <Setter Property="MinHeight" Value="40"/>
                            <Setter Property="MaxHeight" Value="80"/>
                            <Setter Property="MaxWidth" Value="{Binding Width, RelativeSource={RelativeSource Mode=FindAncestor, AncestorLevel=1,AncestorType=ListBox}}"/>
                            <Setter Property="BorderBrush" Value="{StaticResource color_Gray2}"/>
                            <Setter Property="AcceptsTab" Value="True"/>
                            <Setter Property="AcceptsReturn" Value="True"/>
                            <!--<Setter Property="TextWrapping" Value="Wrap"/>-->
                            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
                        </Style>
                        <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                            <Setter Property="Margin" Value="0,0,5,0"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="35" Height="auto"/>
                        <RowDefinition MinHeight="35"/>
                    </Grid.RowDefinitions>


                    <TextBlock Grid.Row="0" Grid.Column="0"  Text="도구" Style="{StaticResource subStyle_Title_Textlbock}"/>
                    <Border Grid.Row="0" Grid.Column="1" >
                        <StackPanel VerticalAlignment="Top">
                            <StackPanel MinHeight="35" Orientation="Horizontal">
                                <TextBlock Grid.Row="0" Grid.Column="0"  Text="줄 설정" Style="{StaticResource subStyle_Title_Textlbock}"/>
                                <WrapPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="5">
                                    <Button Uid="toOne" Content="한줄로" Click="btn_LineControl_Click"/>
                                    <Button Uid="removeEmpty" Content="빈 줄 제거" Click="btn_LineControl_Click"/>
                                </WrapPanel>
                            </StackPanel>
                            <StackPanel MinHeight="35" Orientation="Horizontal">
                                <TextBlock Grid.Row="0" Grid.Column="0"  Text="공백 설정" Style="{StaticResource subStyle_Title_Textlbock}"/>
                                <WrapPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="5">
                                    <Button Uid="start" Content="앞 공백 제거" Click="btn_RemovewEmpty_Click"/>
                                    <Button Uid="end" Content="뒤 공백 제거"  Click="btn_RemovewEmpty_Click"/>
                                    <Button Uid="startend" Content="앞,뒤 공백 제거"  Click="btn_RemovewEmpty_Click"/>
                                    <Button Uid="all" Content="모든 공백 제거"  Click="btn_RemovewEmpty_Click"/>
                                </WrapPanel>
                            </StackPanel>
                            <StackPanel MinHeight="35" Orientation="Horizontal">
                                <TextBlock Grid.Row="0" Grid.Column="0"  Text="속성 설정" Style="{StaticResource subStyle_Title_Textlbock}"/>
                                <WrapPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="5">
                                    <RadioButton GroupName="ElemenmtType" Uid="0" Content="일반" Style="{StaticResource baseStyle_LeftEnd_RadioButton}" IsChecked="True" Checked="RadioButton_Checked"/>
                                    <RadioButton GroupName="ElemenmtType" Uid="100" Content="전문가 노트" Style="{StaticResource baseStyle_RightEnd_RadioButton}" Checked="RadioButton_Checked"/>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10"  Height="1" Background="{StaticResource color_Gray1}" VerticalAlignment="Bottom"/>

                    <TextBlock Grid.Row="1" Grid.Column="0"  Text="원본" Style="{StaticResource subStyle_Title_Textlbock}"/>
                    <Border Grid.Row="1" Grid.Column="1" >
                        <ListBox ItemsSource="{Binding SelectedItems, ElementName=listbox_headers}">
                            <ListBox.Style>
                                <Style TargetType="ListBox">
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="auto"/>
                                </Style>
                            </ListBox.Style>
                            <ListBox.Resources>
                                <Style TargetType="ListBoxItem">
                                    <!--<Setter Property="HorizontalAlignment" Value="Left"/>-->
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="5,10,5,10" VerticalAlignment="Center">
                                                        <RadioButton GroupName="{Binding Temp.Uid}" Uid="0" Content="일반" Checked="RadioButton_Single_Checked">
                                                            <RadioButton.Style>
                                                                <Style TargetType="RadioButton" BasedOn="{StaticResource baseStyle_LeftEnd_RadioButton}">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding HeadingType}" Value="Normal">
                                                                            <Setter Property="IsChecked" Value="True"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding HeadingType}" Value="ExportNote">
                                                                            <Setter Property="IsChecked" Value="False"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </RadioButton.Style>
                                                        </RadioButton>
                                                        <RadioButton GroupName="{Binding Temp.Uid}" Uid="100" Content="전문가 노트" Checked="RadioButton_Single_Checked">
                                                            <RadioButton.Style>
                                                                <Style TargetType="RadioButton" BasedOn="{StaticResource baseStyle_RightEnd_RadioButton}">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding HeadingType}" Value="Normal">
                                                                            <Setter Property="IsChecked" Value="False"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding HeadingType}" Value="ExportNote">
                                                                            <Setter Property="IsChecked" Value="True"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </RadioButton.Style>
                                                        </RadioButton>
                                                    </StackPanel>
                                                    <TextBox Grid.Column="2" Margin="5" Text="{Binding Display_Name}" LostFocus="TextBox_LostFocus" PreviewGotKeyboardFocus="TextBox_PreviewGotKeyboardFocus" TextChanged="TextBox_TextChanged" />
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.Resources>
                        </ListBox>
                        
                    </Border>
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="10"  Height="1" Background="{StaticResource color_Gray1}" VerticalAlignment="Bottom"/>






                </Grid>
            </Grid>


        </Grid>
    </Grid>
</UserControl>
