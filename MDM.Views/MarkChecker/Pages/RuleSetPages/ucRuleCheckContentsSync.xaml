<UserControl x:Class="MDM.Views.MarkChecker.Pages.RuleSetPages.ucRuleCheckContentsSync"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDM.Views.MarkChecker.Pages.RuleSetPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" DataContextChanged="UserControl_DataContextChanged">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Resources/Styles/resMDMColors.xaml"/>
                <ResourceDictionary Source="../../../Resources/Styles/resMDMStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource color_Primary5}">
            <TextBlock Text="목차 동기화 검토" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="5"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>



            <ListBox Grid.Column="0">
                
            </ListBox>
            <DataGrid Grid.Column="1" x:Name="datagrid_Level0" ItemsSource="{Binding RootHeadings}">
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="AutoGenerateColumns" Value="False"/>
                        <Setter Property="RowHeight" Value="35"/>
                        <Setter Property="HeadersVisibility" Value="None"/>
                    </Style>
                </DataGrid.Style>
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                    <Style TargetType="DataGridRow">
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Display_Name}" Width="*">
                        
                    </DataGridTextColumn>
                </DataGrid.Columns>
                
            </DataGrid>
        </Grid>
        
            
    </Grid>
</UserControl>
