<UserControl x:Class="MDM.Views.MarkChecker.Pages.RuleSetPages.ucRuleCheckSameNameFinder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDM.Views.MarkChecker.Pages.RuleSetPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" DataContextChanged="UserControl_DataContextChanged">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Resources/Styles/resMDMColors.xaml"/>
                <ResourceDictionary Source="../../../Resources/Styles/resMDMStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource color_Primary5}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Grid.Column="0" Text="동일 제목 검토" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="10,5,5,5"/>
                    <Button Content="검토 시작" Style="{StaticResource baseStyle_Common_Button}" Margin="5" Click="btn_CheckStart_Click"/>
                </StackPanel>
                
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="{StaticResource color_Primary2}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="상위 제목" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="5" HorizontalAlignment="Center"/>
                    </Grid>
                </Border>
                <ListBox Grid.Row="1" x:Name="listbox_parentheader" DisplayMemberPath="Display_Name"
                         SelectionChanged="listbox_parentheader_SelectionChanged">
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Height" Value="35"/>
                        </Style>
                    </ListBox.Resources>
                </ListBox>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="{StaticResource color_Primary4}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Items.Count, ElementName=listbox_childrenheader}" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="5" HorizontalAlignment="Center"/>
                    </Grid>
                </Border>
                <ListBox Grid.Row="1" x:Name="listbox_childrenheader"  DisplayMemberPath="Display_Name">
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Height" Value="35"/>
                        </Style>
                    </ListBox.Resources>
                    
                </ListBox>
            </Grid>
        </Grid>
            
    </Grid>
</UserControl>
