<UserControl x:Class="MDM.Views.MarkChecker.Pages.ucMarkCheckerContentsCheckingTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDM.Views.MarkChecker.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/resMDMColors.xaml"/>
                <ResourceDictionary Source="../../Resources/Styles/resMDMStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height=" 35"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource color_Primary2}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Grid.Column="0" Text="표 리스트" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="10,0,10,0" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <StackPanel.Resources>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource baseStyle_PanelTitle_Textblock}"/>
                            </StackPanel.Resources>
                            <TextBlock Text="("/>
                            <TextBlock Text="{Binding Items.Count, ElementName=listbox_headers}" Margin="3,0,3,0"/>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedItems.Count, ElementName=listbox_headers}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text=" ," />
                                <TextBlock Text="선택 : " Margin="3,0,3,0" Foreground="{StaticResource color_Yellow}"/>
                                <TextBlock Text="{Binding SelectedItems.Count, ElementName=listbox_headers}" Foreground="{StaticResource color_Yellow}"/>
                            </StackPanel>
                            <TextBlock Text=")"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>


                <Grid Grid.Row="0">
                    <Grid.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}"/>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="35"/>
                        <RowDefinition MinHeight="35"/>
                        <RowDefinition MinHeight="35"/>
                    </Grid.RowDefinitions>


                    <Border Grid.Row="0" BorderBrush="{StaticResource color_Gray2}" BorderThickness="0,0,0,2" Margin="3,2,3,2">
                        <Grid Grid.Row="2" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="검색어 :" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" x:Name="txtbox_SearchKeyword" Margin="5,0,5,0" KeyUp="txtbox_SearchKeyword_KeyUp">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button Grid.Column="2" Uid="byKeyword" Content="검색" Click="btn_Search_Click"/>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1" BorderBrush="{StaticResource color_Gray2}" BorderThickness="0,0,0,2" Margin="3,2,3,2">
                        <Grid  Margin="5,1,5,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton Grid.Column="0" GroupName="textType" x:Name="rBtn_All" Uid="0"    Content="전체" Style="{StaticResource baseStyle_LeftEnd_RadioButton}" Checked="RadioButton_Checked"/>
                            <RadioButton Grid.Column="1" GroupName="textType" Uid="2211" Content="존재" Style="{StaticResource baseStyle_Center_RadioButton}" Checked="RadioButton_Checked"/>
                            <RadioButton Grid.Column="2" GroupName="textType" Uid="2213" Content="누락" Style="{StaticResource baseStyle_RightEnd_RadioButton}" Checked="RadioButton_Checked"/>

                            <Grid Grid.Column="4" Margin="20,0,5,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Page : " Style="{StaticResource baseStyle_PanelTitle_Textblock}" Foreground="Black"/>
                                <ComboBox Grid.Column="1" x:Name="combo_Page" SelectionChanged="combo_Page_SelectionChanged">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Background" Value="white"/>
                                            <Setter Property="IsReadOnly" Value="False"/>
                                            <Setter Property="IsTextSearchEnabled" Value="True"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                            </Grid>


                        </Grid>
                    </Border>


                    <Border Grid.Row="2" BorderBrush="{StaticResource color_Gray2}" BorderThickness="0,0,0,2" Margin="3,2,3,2">
                        <Grid Grid.Row="0" Margin="5">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button Uid="1" Content="전체 선택" Click="btn_AllSelect_Click"/>
                                <Button Uid="0" Content="전체 해제" Click="btn_AllSelect_Click" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
                <ListBox Grid.Row="1" x:Name="listbox_headers"  Visibility="Visible">
                    <ListBox.Style>
                        <Style TargetType="ListBox">
                            <Setter Property="SelectionMode" Value="Multiple"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </ListBox.Style>
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="MinHeight" Value="35"/>
                            <Setter Property="MaxHeight" Value="65"/>
                            <Setter Property="Margin" Value="0,2,0,3"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="35"/>
                                                <ColumnDefinition Width="35"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Grid.ColumnSpan="10" x:Name="bg" Opacity="0.2"/>
                                            <CheckBox Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{TemplateBinding IsSelected}"/>
                                            <Border Grid.Column="0" Background="{StaticResource color_White}" Opacity="0.001"/>
                                            <Border Grid.Column="1" BorderBrush="{StaticResource color_Gray2}" BorderThickness="1,0,1,0" Margin="0,3,0,3">
                                                <TextBlock Grid.Column="1" Text="{Binding Display_SlideNum}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Grid.Column="2" Text="{Binding Display_Content}"  HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" TextTrimming="WordEllipsis" Margin="10,2,10,3"/>
                                            <Border Grid.Column="0" Grid.ColumnSpan="10" BorderBrush="{StaticResource color_Gray2}" BorderThickness="0,0,0,1" VerticalAlignment="Bottom"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="bg" Property="Background" Value="SkyBlue"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>

                </ListBox>
                <Grid Grid.Row="2" Height="35">
                    <Grid.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                            <Setter Property="Margin" Value="3,5,3,5"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="검토" Click="btn_ConvertToXML_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>



        </Grid>

    </Grid>
</UserControl>
