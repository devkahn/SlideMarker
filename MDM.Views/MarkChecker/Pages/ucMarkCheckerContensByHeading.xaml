<UserControl x:Class="MDM.Views.MarkChecker.Pages.ucMarkCheckerContensByHeading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDM.Views.MarkChecker.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="white">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/resMDMColors.xaml"/>
                <ResourceDictionary Source="../../Resources/Styles/resMDMStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="500"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
                <RowDefinition MinHeight="30" Height="auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0">
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                            <Setter Property="Margin" Value="3"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="3,0,3,0">
                            <Button Uid="1" x:Name="btn_ChildrenFold" Content="하위 접기" Click="btn_ChildrenFold_Click"/>
                            <Button Uid="0" x:Name="btn_ChildrenUnFold" Content="하위 펼치기" Click="btn_ChildrenFold_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="3,0,3,0">
                            <!--<Button Uid="1" x:Name="btn_AddRoot" Content="루트 추가" Click="btn_AddRoot_Click"/>
                            <Button Uid="0" x:Name="btn_AddChild" Content="하위 추가" Click="btn_AddChild_Click"/>-->
                            <Button x:Name="btn_Refresh" Click="btn_Refresh_Click"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <!--<Button x:Name="btn_MoveUp" Content="▲" Click="btn_MoveUp_Click"/>
                        <Button x:Name="btn_MoveDown" Content="▼" Click="btn_MoveDown_Click"/>-->
                    </StackPanel>
                </Grid>
            </Border>

            <TreeView Grid.Row="1" x:Name="treeview_Header"  ItemsSource="{Binding RootHeadings}" 
                      SelectedItemChanged="treeview_Header_SelectedItemChanged">
                <TreeView.Resources>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="{Binding IsTreeExpanded, Mode=TwoWay}"/>
                    </Style>
                </TreeView.Resources>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}" >
                        <Border MinHeight="25">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Display_Name}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5"/>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Children.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <StackPanel.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="12"/>
                                            </Style>
                                        </StackPanel.Resources>
                                        <TextBlock Text="("/>
                                        <TextBlock Text="{Binding Children.Count}"/>
                                        <TextBlock Text=")"/>
                                    </StackPanel>
                                    <Border Background="White" BorderBrush="DarkGreen" BorderThickness="1" VerticalAlignment="Center" Margin="3" Width="{Binding ActualHeight, RelativeSource={RelativeSource Mode=Self}}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Contents.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                            <TextBlock Text="컨" FontSize="10" Margin="1" Foreground="DarkGreen" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                   
                                </StackPanel>
                                
                            </Grid>
                        </Border>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <Border Grid.Row="2" Background="{StaticResource color_White}">
                <Grid Grid.Row="1">
                    <Grid.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                            <Setter Property="Margin" Value="5"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <!--<Button x:Name="btn_SelectionRemove" Content="선택 삭제" Click="btn_SelectionRemove_Click"/>
                        <Button x:Name="btn_SelectionMove" Content="선택 이동" Click="btn_SelectionMove_Click"/>
                        <Button x:Name="btn_SelectionCopy" Content="선택 복사" Click="btn_SelectionCopy_Click"/>-->
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <!--<Button x:Name="btn_ReLoad" Content="다시 로드" Click="btn_ReLoad_Click"/>-->
                        <Button x:Name="btn_Save" Content="제목 저장" Click="btn_Save_Click"/>
                    </StackPanel>

                </Grid>
            </Border>
            
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="{StaticResource color_Primary3}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Rules" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="5"/>
                </Grid>
            </Border>
            <ListBox Grid.Row="1" x:Name="listbox_RuleSet" SelectionChanged="listbox_RuleSet_SelectionChanged" >
                <ListBox.Resources>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Height" Value="35"/>
                    </Style>
                </ListBox.Resources>
                <ListBoxItem Uid="1" Content="목차 전처리"/>
                <ListBoxItem Uid="101" Content="목차 동기화 검토"/>
                <ListBoxItem Uid="102" Content="동일 제목 검토"/>
                <ListBoxItem Uid="999" Content="일괄 수정"/>

            </ListBox>
        </Grid>


        <ContentPresenter Grid.Column="2" x:Name="contentPresenter"/>



        <Border Grid.Column="3" Background="LightGray">

            <ListBox ItemsSource="{Binding SelectedItem.Contents, ElementName=treeview_Header}" DisplayMemberPath="{Binding Contents}">
                
            </ListBox>
        </Border>





    </Grid>
</UserControl>
