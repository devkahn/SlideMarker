<UserControl x:Class="MDM.Views.MarkChecker.Pages.ucMarkCheckerContentsChecking"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDM.Views.MarkChecker.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/resMDMColors.xaml"/>
                <ResourceDictionary Source="../../Resources/Styles/resMDMStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource baseStyle_PanelTitle_Textblock}">
                            <Setter Property="Foreground" Value="Black"/>
                        </Style>
                    </StackPanel.Resources>
                    <TextBlock Text="미분류 본문"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="("/>
                        <TextBlock Text="{Binding Items.Count, ElementName=listbox_Contents}" Margin="3,0,3,0"/>
                        <TextBlock Text=")"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="3">
                    <StackPanel.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                            
                        </Style>
                    </StackPanel.Resources>
                    <Button Content="새로고침" Click="btn_Refresh_Click" />
                    <Button Content="분류 시작" Click="btn_Classification_Click" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" Margin="0,2,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <RadioButton Grid.Column="0" Uid="0" Content="전체" Style="{StaticResource baseStyle_LeftEnd_RadioButton}" IsChecked="True" Checked="RadioButton_Checked"/>
                <RadioButton Grid.Column="1"  Uid="221" Content="글" Style="{StaticResource baseStyle_Center_RadioButton}" Checked="RadioButton_Checked"/>
                <RadioButton Grid.Column="2"  Uid="222" Content="이미지" Style="{StaticResource baseStyle_Center_RadioButton}" Checked="RadioButton_Checked"/>
                <RadioButton Grid.Column="3"  Uid="223" Content="표" Style="{StaticResource baseStyle_RightEnd_RadioButton}" Checked="RadioButton_Checked"/>
            </Grid>

            <ListBox Grid.Row="2" x:Name="listbox_Contents" SelectionChanged="listbox_Contents_SelectionChanged"  SelectionMode="Single">
                <ListBox.Resources>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Height" Value="35"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"  BorderBrush="{StaticResource color_DarkGreen}" BorderThickness="1" Margin="6" Width="{Binding ActualHeight, RelativeSource={RelativeSource Mode=Self}}">
                                            
                                        </Border>

                                        <ContentPresenter Grid.Column="1" Content="{Binding Display_Content}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                </ListBox.Resources>
            </ListBox>
            <Grid Grid.Row="3">
                <Grid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                        
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="일반 텍스트"/>
                    <Button Grid.Column="1" Content="순서 텍스트"/>
                    <Button Grid.Column="2" Content="비순서 텍스트"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="이미지"/>
                    <Button Grid.Column="1" Content="표"/>
                </Grid>
            </Grid>
        </Grid>
        <TabControl Grid.Column="2">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="글"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="3,0,3,0">
                            <TextBlock Text="("/>
                            <TextBlock Text="" Margin="3,0,3,0"/>
                            <TextBlock Text=")"/>
                        </StackPanel>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TabControl>
                        <TabItem Header="일괄">
                            <Grid>
                                <Grid.Resources>
                                    <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                                        <Setter Property="Margin" Value="5,3,5,3"/>
                                    </Style>
                                    <Style TargetType="WrapPanel">
                                        <Setter Property="Orientation" Value="Horizontal"></Setter>
                                        <Setter Property="VerticalAlignment" Value="Top"/>
                                        <Setter Property="Margin" Value="10,10,5,10"/>
                                    </Style>
                                    <Style x:Key="subStyle_SubTitle_Textblock" TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="{StaticResource color_Black}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Margin" Value="5,5,20,5"/>
                                    </Style>
                                </Grid.Resources>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition MinHeight="35" Height="auto"/>
                                        <RowDefinition MinHeight="35" Height="auto"/>
                                        <RowDefinition MinHeight="35" Height="auto"/>
                                        <RowDefinition MinHeight="35" Height="auto"/>
                                        <RowDefinition MinHeight="35" Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5,10,5,10">
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="일괄 적용" Style="{StaticResource subStyle_SubTitle_Textblock}"/>
                                    </StackPanel>
                                    <WrapPanel Grid.Row="0" Grid.Column="1">
                                        <Button Content="일괄 검토"/>
                                    </WrapPanel>
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="20" Background="{StaticResource color_Gray2}" Height="1"  VerticalAlignment="Bottom"/>

                                    <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5,10,5,10">
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="기본 검토" Style="{StaticResource subStyle_SubTitle_Textblock}"/>
                                    </StackPanel>
                                    <WrapPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="앞뒤 공백 제거" Click="btn_AllTrim_Click"/>
                                    </WrapPanel>
                                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="20" Background="{StaticResource color_Gray2}" Height="1"  VerticalAlignment="Bottom"/>

                                    <StackPanel Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5,10,5,10">
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="일반형 텍스트" Style="{StaticResource subStyle_SubTitle_Textblock}"/>
                                        <Button Content="검토 및 마킹" Click="btn_Normal_AllCheckAndMarking_Click"/>
                                    </StackPanel>
                                    <WrapPanel Grid.Row="2" Grid.Column="1">
                                        <Button Content="단행 컨텐츠 분류" Click="btn_NormalTextClssification_Click"/>
                                        <Button Content="앞 숫자 제거" Click="btn_FirstDigitRemoval_Click"/>
                                        <Button Content="앞 특문 제거" Click="btn_FirstSpecialRemoval_Click"/>
                                    </WrapPanel>
                                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="20" Background="{StaticResource color_Gray2}" Height="1"  VerticalAlignment="Bottom"/>


                                    <StackPanel Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5,10,5,10">
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="순서형 텍스트" Style="{StaticResource subStyle_SubTitle_Textblock}"/>
                                        <Button Content="검토 및 마킹" Click="btn_Oreder_AllCheckAndMarking_Click"/>
                                    </StackPanel>
                                    <WrapPanel Grid.Row="3" Grid.Column="1">
                                        <Button Content="다행+숫자 컨텐츠 분류"/>
                                        <Button Content="일괄 마킹"/>
                                    </WrapPanel>
                                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="20" Background="{StaticResource color_Gray2}" Height="1"  VerticalAlignment="Bottom"/>

                                    <StackPanel Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5,10,5,10">
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="비순서형 텍스트" Style="{StaticResource subStyle_SubTitle_Textblock}"/>
                                        <Button Content="검토 및 마킹" Click="btn_UnOrder_AllCheckAndMarking_Click"/>
                                    </StackPanel>
                                    <WrapPanel Grid.Row="4" Grid.Column="1">
                                        <Button Content="다행 컨텐츠 분류" Click="btn_UnOrderedTextClassifiacation_Click"/>
                                        <Button Content="앞 숫자 제거" Click="btn_UnOrder_FirstDigitRemove_Click"/>
                                        <Button Content="앞 특문 제거" Click="btn_UnOrder_FirstSpecialRemove_Click"/>
                                        <Button Content="앞 공백 제거" Click="btn_UnOrder_FirstEmptyRemove_Click"/>
                                        <!--<Button Content="일괄 마킹" Click="btn_UnOrder_Marking_Click"/>-->
                                    </WrapPanel>
                                    <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="20" Background="{StaticResource color_Gray2}" Height="1"  VerticalAlignment="Bottom"/>
                                </Grid>
                                <!--<Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="{StaticResource color_Gray2}">
                                        <TextBlock Text="이미지" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Foreground="{StaticResource color_Black}" Margin="5,0,5,0"/>
                                    </Border>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Background="{StaticResource color_Gray2}">
                                        <TextBlock Text="표" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Foreground="{StaticResource color_Black}"  Margin="5,0,5,0"/>
                                    </Border>
                                </Grid>-->

                            </Grid>
                        </TabItem>
                        <TabItem Header="개별" IsEnabled="False">
                            <ContentPresenter Grid.Row="1" x:Name="contentPresenter_Content"  Margin="5,0,5,5"/>
                        </TabItem>
                    </TabControl>
                    <Grid Grid.Column="1">
                        <Grid.Resources>
                            <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                                <Setter Property="Margin" Value="5"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource color_Primary}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="일반형 텍스트" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="5"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource baseStyle_PanelTitle_Textblock}"/>
                                    </StackPanel.Resources>
                                    <TextBlock Text="("/>
                                    <TextBlock Text="{Binding Items.Count, ElementName=listbox_normalText}" Margin="3,0,3,0"/>
                                    <TextBlock Text=")"/>
                                </StackPanel>
                            </StackPanel>

                        </Border>
                        <ListBox Grid.Row="1" Grid.Column="0" x:Name="listbox_normalText">
                            <ListBox.Resources>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Margin" Value="5,1,5,1"/>
                                    <Setter Property="MinHeight" Value="40"/>
                                    <Setter Property="Background" Value="{Binding Display_Background}"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource color_Gray3}"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Grid>
                                                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                                        <Grid>
                                                            <Border Background="{TemplateBinding Background}" Opacity="0.3"/>
                                                            <TextBlock Grid.Column="1" Text="{Binding Display_Content}" TextTrimming="WordEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource color_Gray2}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource color_Primary}"/>
                                            <Setter Property="BorderThickness" Value="1,1,1,2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>

                            </ListBox.Resources>
                        </ListBox>
                        <Border Grid.Row="2" Grid.Column="0" BorderBrush="{StaticResource color_Gray2}" BorderThickness="1,0,1,0">
                            <Grid Grid.Row="2" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Uid="Normal" Content="비 순서형으로" Click="btn_ToUnorder_Click"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Uid="Normal" Content="순서형으로" Click="btn_ToOrderList_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource color_Primary}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="순서형 텍스트" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="5"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource baseStyle_PanelTitle_Textblock}"/>
                                    </StackPanel.Resources>
                                    <TextBlock Text="("/>
                                    <TextBlock Text="{Binding Items.Count, ElementName=listbox_orderedText}" Margin="3,0,3,0"/>
                                    <TextBlock Text=")"/>
                                </StackPanel>
                            </StackPanel>

                        </Border>
                        <ListBox Grid.Row="1" Grid.Column="1" x:Name="listbox_orderedText">
                            <ListBox.Resources>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Margin" Value="5,1,5,1"/>
                                    <Setter Property="MinHeight" Value="40"/>
                                    <Setter Property="Background" Value="{Binding Display_Background}"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource color_Gray3}"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                                    <Grid>
                                                        <Border Background="{TemplateBinding Background}" Opacity="0.3"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding Display_Content}" TextTrimming="WordEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource color_Gray2}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource color_Primary}"/>
                                            <Setter Property="BorderThickness" Value="1,1,1,2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>

                            </ListBox.Resources>
                        </ListBox>
                        <Border Grid.Row="2" Grid.Column="1" BorderBrush="{StaticResource color_Gray2}" BorderThickness="1,0,1,0">
                            <Grid Grid.Row="2" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Uid="Order" Content="일반형으로" Click="btn_ToNormalList_Click"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Uid="Order" Content="비 순서형으로" Click="btn_ToUnorder_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>

    
                        <Border Grid.Row="0" Grid.Column="2" Background="{StaticResource color_Primary}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="비 순서형 텍스트" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="5"/>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <StackPanel.Resources>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource baseStyle_PanelTitle_Textblock}"/>
                                        </StackPanel.Resources>
                                        <TextBlock Text="("/>
                                        <TextBlock Text="{Binding Items.Count, ElementName=listbox_unorderedText}" Margin="3,0,3,0"/>
                                        <TextBlock Text=")"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ListBox Grid.Row="1" Grid.Column="2" x:Name="listbox_unorderedText" SelectionMode="Multiple">
                            <ListBox.Resources>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Margin" Value="5,1,5,1"/>
                                    <Setter Property="MinHeight" Value="40"/>
                                    <Setter Property="Background" Value="{Binding Display_Background}"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource color_Gray3}"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                                    <Grid>
                                                        <Border Background="{TemplateBinding Background}" Opacity="0.3"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding Display_Content}" TextTrimming="WordEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource color_Gray2}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource color_Primary}"/>
                                            <Setter Property="BorderThickness" Value="1,1,1,2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>

                            </ListBox.Resources>
                        </ListBox>
                        <Border Grid.Row="2" Grid.Column="2" BorderBrush="{StaticResource color_Gray2}" BorderThickness="1,0,1,0">
                            <Grid Grid.Row="2" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Uid="Unorder" Content="순서형으로" Click="btn_ToOrderList_Click"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Uid="Unorder" Content="일반형으로" Click="btn_ToNormalList_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>



                    </Grid>
                </Grid>
                
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="이미지"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="3,0,3,0">
                            <TextBlock Text="("/>
                            <TextBlock Text="" Margin="3,0,3,0"/>
                            <TextBlock Text=")"/>
                        </StackPanel>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TabControl Grid.Column="0">
                        <TabItem Header="일괄">
                            <Grid>
                                <Grid.Resources>
                                    <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                                        <Setter Property="Margin" Value="5,3,5,3"/>
                                    </Style>
                                    <Style TargetType="WrapPanel">
                                        <Setter Property="Orientation" Value="Horizontal"></Setter>
                                        <Setter Property="VerticalAlignment" Value="Top"/>
                                        <Setter Property="Margin" Value="10,10,5,10"/>
                                    </Style>
                                    <Style x:Key="subStyle_SubTitle_Textblock" TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="{StaticResource color_Black}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Margin" Value="5,5,20,5"/>
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition MinHeight="35" Height="auto"/>
                                    <RowDefinition MinHeight="35" Height="auto"/>
                                    <RowDefinition MinHeight="35" Height="auto"/>
                                    <RowDefinition MinHeight="35" Height="auto"/>
                                    <RowDefinition MinHeight="35" Height="auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5,10,5,10">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="일괄 적용" Style="{StaticResource subStyle_SubTitle_Textblock}"/>
                                </StackPanel>
                                <WrapPanel Grid.Row="0" Grid.Column="1">
                                    <Button Content="일괄 검토" HorizontalAlignment="Stretch" Click="btn_AllImageCheck_Click"/>
                                </WrapPanel>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="20" Background="{StaticResource color_Gray2}" Height="1"  VerticalAlignment="Bottom"/>
      
                            </Grid>
                        </TabItem>
                        <TabItem Header="개별" IsEnabled="False"/>
                    </TabControl>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Grid.Column="0" Background="{StaticResource color_Primary}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="이미지 리스트 " Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="5"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource baseStyle_PanelTitle_Textblock}"/>
                                    </StackPanel.Resources>
                                    <TextBlock Text="("/>
                                    <TextBlock Text="{Binding Items.Count, ElementName=listbox_ImageList}" Margin="3,0,3,0"/>
                                    <TextBlock Text=")"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <ListBox Grid.Row="1" Grid.Column="0" x:Name="listbox_ImageList">
                            <ListBox.Resources>
                                <Style TargetType="ListBoxItem">
