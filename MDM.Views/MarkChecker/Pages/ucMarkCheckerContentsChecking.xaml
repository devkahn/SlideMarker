<UserControl x:Class="MDM.Views.MarkChecker.Pages.ucMarkCheckerContentsChecking"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDM.Views.MarkChecker.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="checkingMain">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/resMDMColors.xaml"/>
                <ResourceDictionary Source="../../Resources/Styles/resMDMStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                        
                    </Style>
                </StackPanel.Resources>
                <Button Content="저장" Click="btn_ContentsSave_Click" IsEnabled="False"/>
                <Button Content="일괄 검토" IsEnabled="False"/>
                <Button Content="새로 고침" Click="btn_RefreshAll_click" />
            </StackPanel>
            
        </Grid>
        
        
        
        <TabControl Grid.Row="1" Visibility="Visible">
            <TabItem Header="글">
                <Grid>
                    <local:ucMarkCheckerContentsCheckingText x:Name="ucMarkCheckerCheckingText" Tag="{Binding ElementName=checkingMain}"/>
                </Grid>
            </TabItem>
            <TabItem Header="이미지">
                <local:ucMarkCheckerContentsCheckingImage x:Name="ucMarkCheckerCheckingImage" Tag="{Binding ElementName=checkingMain}"/>
            </TabItem>
            <TabItem Header="표">
                <local:ucMarkCheckerContentsCheckingTable x:Name="ucmarkcheckerCheckingTable" Tag="{Binding ElementName=checkingMain}"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
