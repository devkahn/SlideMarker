<UserControl x:Class="MDM.Views.MarkChecker.Pages.ucMarCheckerToXml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDM.Views.MarkChecker.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/resMDMColors.xaml"/>
                <ResourceDictionary Source="../../Resources/Styles/resMDMStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="2.5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <Grid Visibility="Collapsed"> 
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
                <RowDefinition MinHeight="30" Height="auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0">
                <Grid>
                    <Grid.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                            <Setter Property="Margin" Value="3"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </Border>

            <TreeView Grid.Row="1" x:Name="treeview_Header"  ItemsSource="{Binding RootHeadings}" 
                   SelectedItemChanged="treeview_Header_SelectedItemChanged">
                <TreeView.Resources>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="{Binding IsTreeExpanded, Mode=TwoWay}"/>
                    </Style>
                </TreeView.Resources>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}" >
                        <Border MinHeight="25">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Display_Name}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5"/>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Children.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <StackPanel.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="12"/>
                                            </Style>
                                        </StackPanel.Resources>
                                        <TextBlock Text="("/>
                                        <TextBlock Text="{Binding Children.Count}"/>
                                        <TextBlock Text=")"/>
                                    </StackPanel>
                                    <Border Background="White" BorderBrush="DarkGreen" BorderThickness="1" VerticalAlignment="Center" Margin="3" Width="{Binding ActualHeight, RelativeSource={RelativeSource Mode=Self}}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Contents.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="컨" FontSize="10" Margin="1" Foreground="DarkGreen" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                </StackPanel>

                            </Grid>
                        </Border>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <Border Grid.Row="2" Background="{StaticResource color_White}">
                <Grid Grid.Row="1">
                    <Grid.Resources>
                        <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                            <Setter Property="Margin" Value="5"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="추출" Click="btn_Export_Click"/>
                    <Button Grid.Column="1" Content="UUID" Click="btn_UUID_Click"/>
                </Grid>
            </Border>
        </Grid>

        <TabControl Grid.Column="1">
            <TabItem Header="일괄 설정">
                <local:ucMarCheckerToXmlAllSetting x:Name="ucMarCheckerToXmlAllSetting" />
            </TabItem>
            <TabItem Header="단일 설정" IsEnabled="False">
                <local:ucMarCheckerToXmlUnitSetting x:Name="ucMarCheckerToXmlUnitSetting"/> 
            </TabItem>
        </TabControl>
        <Grid Grid.Column="2">
            <Grid.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}"/>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="{StaticResource color_Primary}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="추출" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Margin="10,0,10,0"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Grid.Column="1" Content="  일괄 설정  " Margin="5" Click="btn_AllSetting_Click" Visibility="Collapsed"/>
                    </StackPanel>
                    
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <ListBox>
                    <ListBox.Style>
                        <Style TargetType="ListBox">
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0,5,0,5"/>
                        </Style>
                    </ListBox.Style>
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="BorderBrush" Value="{StaticResource color_Gray2}"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="35"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.ColumnSpan="20" x:Name="background"/>
                                                <Border Grid.Column="0" Margin="5" Background="Red">
                                                    <TextBlock Text="○" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <Grid Grid.Column="1">
                                                    <TextBlock Text="{TemplateBinding Content}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>
                </ListBox>
                <Grid>
                    <Border Background="{StaticResource color_Gray3}" Opacity="0.5"/>
                    <TextBlock Text="준비중" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource color_Gray5}"/>
                </Grid>
            </Grid>
            <Border Grid.Row="2" Background="{StaticResource color_Gray2}">
                <Grid>
    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <CheckBox x:Name="checkbox_IncludeZip" Content="압축파일 만들기" VerticalAlignment="Center" IsChecked="True"/>
                        <Button Grid.Column="1" Content="추출!!" Margin="5" Width="100" Click="btn_Export_Click" Tag="{Binding ElementName=checkbox_IncludeZip}"/>
                    </StackPanel>


                    
                    
                </Grid>
            </Border>
           
        </Grid>

    </Grid>
</UserControl>
