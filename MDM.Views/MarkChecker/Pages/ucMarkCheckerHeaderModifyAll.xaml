<UserControl x:Class="MDM.Views.MarkChecker.Pages.ucMarkCheckerHeaderModifyAll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDM.Views.MarkChecker.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" DataContextChanged="UserControl_DataContextChanged">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/resMDMColors.xaml"/>
                <ResourceDictionary Source="../../Resources/Styles/resMDMStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    
    <Grid Grid.Column="2" >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
     
       
        <DataGrid Grid.Row="0" x:Name="datagrid">
            <DataGrid.Style>
                <Style TargetType="DataGrid">
                    <Setter Property="AutoGenerateColumns" Value="False"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="RowHeight" Value="25"/>
                    <Setter Property="HorizontalGridLinesBrush" Value="LightGray"/>
                    <Setter Property="HeadersVisibility" Value="Column"/>
                </Style>
            </DataGrid.Style>
            <DataGrid.Columns>
                <DataGridTextColumn Header="변경 전" Binding="{Binding OriginName}" Width="*"/>
                <DataGridTextColumn Header="변경 후" Binding="{Binding TargetName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Border Grid.Row="1" Background="{StaticResource color_Gray1}">
            <Grid Grid.Row="2" Background="White" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{StaticResource color_Gray2}" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">
                            <TextBlock Text="제목 일괄 수정" Style="{StaticResource baseStyle_PanelTitle_Textblock}" Foreground="Black" FontSize="12" Margin="10,5,5,5"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="1" Grid.Column="0" BorderBrush="{StaticResource color_Gray3}" BorderThickness="0,0,1,0" VerticalAlignment="Stretch">
                        <ListBox>
                            <ListBox.Style>
                                <Style TargetType="ListBox">
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                </Style>
                            </ListBox.Style>
                            <ListBox.Resources>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Margin" Value="5,0,0,0"/>
                                </Style>
                            </ListBox.Resources>
                            <ListBoxItem Uid="100" Content="문자 교체"/>
                            <ListBoxItem Uid="200" Content="문자 추가"/>
                            <ListBoxItem Uid="300" Content="문자 삭제"/>
                            <ListBoxItem Uid="400" Content="번호 붙이기"/>
                        </ListBox>
                    </Border>
                        
                </Grid>
                

                
               
            </Grid>
        </Border>
        <Border Grid.Row="2" Background="{StaticResource color_Gray2}">
            <Grid>
                <Grid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource baseStyle_Common_Button}">
                        
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center"  >
                    <StackPanel.Resources>
                        <Style TargetType="StackPanel">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Orientation" Value="Horizontal"/>
                            <Setter Property="Margin" Value="3,2,3,2"/>
                        </Style>
                    </StackPanel.Resources>
                    <StackPanel>
                        <Button Content="초기화"/>
                    </StackPanel>
                    <StackPanel>
                        <Button Content="선택 제외"/>
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="3,2,3,2">
                    <Button Content="변경" Width="100"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
