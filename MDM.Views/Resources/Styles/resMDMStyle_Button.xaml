<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="resMDMColors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="baseStyle_Common_Button" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource color_White}"/>
        <Setter Property="BorderBrush" Value="{StaticResource color_Gray5}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource color_Black}"/>
        <Setter Property="ToolTipService.InitialShowDelay" Value="500"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="5" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3,0,3,0"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource color_Gray1}"/>
                <Setter Property="FontWeight" Value="UltraBold"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{StaticResource color_Gray1}"/>
                <Setter Property="BorderBrush" Value="{StaticResource color_Gray4}"/>
                <Setter Property="Foreground" Value="{StaticResource color_Gray3}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>