<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="resMDMColors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="baseStyle_WholePanel_Border" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource color_White}"/>
        <Setter Property="BorderBrush" Value="{StaticResource color_Gray3}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    <Style x:Key="baseStyle_TopSubPanel_Border" TargetType="Border">
        <Setter Property="CornerRadius" Value="5,5,0,0"/>
        <Setter Property="Background" Value="{StaticResource color_Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource color_Gray4}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>
    <Style x:Key="baseStyle_BottomSubPanel_Border" TargetType="Border">
        <Setter Property="CornerRadius" Value="0,0,5,5"/>
        <Setter Property="Background" Value="{StaticResource color_Gray2}"/>
        <Setter Property="BorderBrush" Value="{StaticResource color_Gray3}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
    </Style>
    <Style x:Key="baseStyle_NoSelect_Border" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource color_Gray1}"/>
        <Setter Property="BorderBrush" Value="{StaticResource color_Gray2}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
</ResourceDictionary>