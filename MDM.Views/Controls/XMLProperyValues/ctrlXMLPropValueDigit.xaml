<UserControl x:Class="MDM.Views.Controls.XMLProperyValues.ctrlXMLPropValueDigit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDM.Views.Controls.XMLProperyValues"
            >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/resMDMColors.xaml"/>
                <ResourceDictionary Source="../../Resources/Styles/resMDMStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Margin="0,0,0,2">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="{StaticResource color_Gray3}"/>
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsFocused, ElementName=value}" Value="True">
                        <Setter Property="BorderBrush" Value="{StaticResource color_Gray5}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <TextBlock Text="숫자을 입력하세요.">
                <TextBlock.Style>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource baseStyle_NoItem_Textblock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="Margin" Value="3,0,3,0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=value}"  Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <TextBox x:Name="value" >
                <TextBox.Style>
                    <Style TargetType="TextBox" BasedOn="{StaticResource baseStyle_Number_Textbox}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalScrollBarVisibility" Value="Hidden"/>
                        <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </Grid>
    </Border>
</UserControl>
