<UserControl x:Class="MDM.Views.Controls.XMLProperyValues.ctrlXMLPropValueBool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MDM.Views.Controls.XMLProperyValues"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resources/Styles/resMDMColors.xaml"/>
                <ResourceDictionary Source="../../Resources/Styles/resMDMStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Left">
        <StackPanel Orientation="Horizontal" Height="25">
            <RadioButton x:Name="rBtn_True" Content="예" Style="{StaticResource baseStyle_LeftEnd_RadioButton}" Width="50"/>
            <RadioButton x:Name="rBtn_False" Content="아니요" Style="{StaticResource baseStyle_RightEnd_RadioButton}" Width="50"/>
        </StackPanel>
    </Grid>
</UserControl>
